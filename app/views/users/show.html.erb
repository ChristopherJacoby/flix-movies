<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
</section>

<div class="actions">
  <%= link_to "Edit", edit_user_path(@user), class: "button edit" %>
  <%= link_to "Delete", @user, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  }, class: "button edit" %>
</div>
